{
  "dataDirectory": "$HOME/db-data",
  "installDirectory": "$HOME/sonicbase",
  "minShardSizeForRebalance": 1000000,
  "copmressRecords": false,
  "useUnsafe": true,
  "maxJavaHeap": "20%",
  "maxJavaHeapTrigger": "95%",
  "user": "ubuntu",
  "maxProcessMemoryTrigger": "90%",
  "clientIsPrivate": false,
  "backup" : {
    "type" : "fileSystem",
    "directory": "$HOME/db-backup",
    "period": "daily",
    "time": "23:00",
    "maxBackupCount": 10,
    "sharedDirectory": false
  },
  "shards" : [
    {
      "replicas": [
        {
          "publicAddress": "localhost",
          "privateAddress": "localhost",
          "port": 9010
        }
      ]
    }
  ],
  "clients": [
    {
      "publicAddress": "localhost",
      "privateAddress": "localhost",
      "port": 8080
    }
  ]
}
