{
    "database": {
        "dataDirectory": "$HOME/db-data",
        "installDirectory": "$HOME/database",
        "maxJavaHeap": "50%",
        "user": "lowryda",
        "maxProcessMemory": "90%",
      "replicationFactor": 1,
        "shards" : [
          {
            "replicas": [
              {
                "privateAddress": "localhost",
                "publicAddress": "localhost",
                "port": 9010
              }
            ]
          }
        ],
      "clients": [
        {
          "privateAddress": "localhost",
          "publicAddress": "localhost",
          "port": 8080
        },
        {
          "privateAddress": "localhost",
          "publicAddress": "localhost",
          "port": 8090
        }
      ]
    }
}
